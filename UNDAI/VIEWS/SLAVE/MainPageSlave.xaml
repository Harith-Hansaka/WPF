                            Text="{Binding RSSIRateMaster, StringFormat='{}{0} Mbps'}"
                            TextAlignment="Center" />
                    </Grid>
                </Grid>

                <Grid
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Margin="0,10,0,10">
                    <!--  Background="AntiqueWhite">  -->

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Width="140"
                        Height="140"
                        Margin="20,0"
                        Background="{Binding HomeBtnColor}">
                        <Button
                            Width="140"
                            Height="140"
                            VerticalAlignment="Center"
                            FontSize="40"
                            Foreground="Black"
                            PreviewMouseDown="btnHomePositionMainPage_PreviewMouseDown"
                            PreviewMouseMove="btnHomePositionMainPage_PreviewMouseMove"
                            PreviewMouseUp="btnHomePositionMainPage_PreviewMouseUp"
                            PreviewStylusDown="btnHomePositionMainPage_PreviewStylusDown"
                            PreviewStylusMove="btnHomePositionMainPage_PreviewStylusMove"
                            PreviewStylusUp="btnHomePositionMainPage_PreviewStylusUp"
                            PreviewTouchDown="btnHomePositionMainPage_PreviewTouchDown"
                            PreviewTouchMove="btnHomePositionMainPage_PreviewTouchMove"
                            PreviewTouchUp="btnHomePositionMainPage_PreviewTouchUp"
                            Style="{StaticResource ClickableButtonStyle1}">

                            <TextBlock Margin="10" TextAlignment="Center">
                                原点
                            </TextBlock>

                        </Button>
                    </Border>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="140"
                        Height="140"
                        Margin="20,0"
                        Background="{Binding DirectionSetBtnColor}">
                        <Button
                            Width="140"
                            Height="140"
                            VerticalAlignment="Center"
                            Content="方調"
                            FontSize="40"
                            Foreground="Black"
                            PreviewMouseDown="btnDirectionSearchMainPage_PreviewMouseDown"
                            PreviewMouseMove="btnDirectionSearchMainPage_PreviewMouseMove"
                            PreviewMouseUp="btnDirectionSearchMainPage_PreviewMouseUp"
                            PreviewStylusDown="btnDirectionSearchMainPage_PreviewStylusDown"
                            PreviewStylusMove="btnDirectionSearchMainPage_PreviewStylusMove"
                            PreviewStylusUp="btnDirectionSearchMainPage_PreviewStylusUp"
                            PreviewTouchDown="btnDirectionSearchMainPage_PreviewTouchDown"
                            PreviewTouchMove="btnDirectionSearchMainPage_PreviewTouchMove"
                            PreviewTouchUp="btnDirectionSearchMainPage_PreviewTouchUp"
                            Style="{StaticResource ClickableButtonStyle1}" />
                    </Border>

                    <Border
                        Grid.Row="0"
                        Grid.Column="2"
                        Width="140"
                        Height="140"
                        Margin="20,0"
                        Background="{Binding PeakBtnColor}">

                        <Button
                            Width="140"
                            Height="140"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Foreground="Black"
                            PreviewMouseDown="btnPeakSearchMainPage_PreviewMouseDown"
                            PreviewMouseMove="btnPeakSearchMainPage_PreviewMouseMove"
                            PreviewMouseUp="btnPeakSearchMainPage_PreviewMouseUp"
                            PreviewStylusDown="btnPeakSearchMainPage_PreviewStylusDown"
                            PreviewStylusMove="btnPeakSearchMainPage_PreviewStylusMove"
                            PreviewStylusUp="btnPeakSearchMainPage_PreviewStylusUp"
                            PreviewTouchDown="btnPeakSearchMainPage_PreviewTouchDown"
                            PreviewTouchMove="btnPeakSearchMainPage_PreviewTouchMove"
                            PreviewTouchUp="btnPeakSearchMainPage_PreviewTouchUp"
                            Style="{StaticResource ClickableButtonStyle1}">

                            <TextBlock TextAlignment="Center">
                                <Run FontSize="{Binding PeakSearchButtonTextFirstLineFontSize}" Text="{Binding PeakSearchButtonTextFirstLine}" />
                                <LineBreak />
                                <Run FontSize="{Binding PeakSearchButtonTextSecondLineFontSize}" Text="{Binding PeakSearchButtonTextSecondLine}" />
                            </TextBlock>

                        </Button>

                    </Border>

                </Grid>

                <Button
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Width="500"
                    Height="120"
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    Content="停止"
                    FontSize="60"
                    FontWeight="ExtraBold"
                    PreviewMouseDown="StopSlaveButton_PreviewMouseDown"
                    PreviewMouseMove="StopSlaveButton_PreviewMouseMove"
                    PreviewStylusDown="StopSlaveButton_PreviewStylusDown"
                    PreviewStylusMove="StopSlaveButton_PreviewStylusMove"
                    PreviewTouchDown="StopSlaveButton_PreviewTouchDown"
                    PreviewTouchMove="StopSlaveButton_PreviewTouchMove"
                    Style="{StaticResource ClickableButtonStyle4}" />

                <Canvas
                    Grid.Row="0"
                    Grid.RowSpan="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Background="#80ffffe0"
                    Visibility="{Binding ControllerAccess}" />

                <Grid
                    Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="4">
                    <!--  Background="LightSkyBlue">  -->

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Width="400"
                        Height="100"
                        Margin="0,0,0,0">
                        <Button
                            x:Name="btnSystemSetting"
                            Grid.Column="0"
                            Height="70"
                            Margin="0"
                            Padding="5"
                            VerticalAlignment="Center"
                            BorderBrush="Blue"
                            BorderThickness="1"
                            Content="システム設定"
                            FontSize="40"
                            Foreground="Black"
                            PreviewMouseDown="btnSystemSetting_PreviewMouseDown"
                            PreviewMouseMove="btnSystemSetting_PreviewMouseMove"
                            PreviewStylusDown="btnSystemSetting_PreviewStylusDown"
                            PreviewStylusMove="btnSystemSetting_PreviewStylusMove"
                            PreviewTouchDown="btnSystemSetting_PreviewTouchDown"
                            PreviewTouchMove="btnSystemSetting_PreviewTouchMove"
                            Style="{StaticResource ClickableButtonStyle3}" />

                    </Border>

                </Grid>

            </Grid>

            <Grid
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="0,-10,0,0"
                Background="Gray">

                <TextBlock
                    Height="70"
                    MaxWidth="600"
                    MaxHeight="50"
                    Margin="550,0,0,0"
                    HorizontalAlignment="Left"
                    FontSize="40"
                    Foreground="White"
                    Text="{Binding ReceivedData}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <TextBlock
                    x:Name="txtBlockAlarm"
                    Height="60"
                    MaxWidth="1070"
                    MaxHeight="60"
                    HorizontalAlignment="Center"
                    FontSize="40"
                    Foreground="White"
                    Text="{Binding SlaveAlarmData}"
                    TextAlignment="Center"
                    TextWrapping="NoWrap" />

            </Grid>

            <Image
                Grid.RowSpan="3"
                Grid.ColumnSpan="3"
                MaxWidth="500"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                gif:AnimationBehavior.SourceUri="\RESOURCES\LOADING SCREEN.gif"
                Visibility="{Binding LoadingScreenImgVisibility}" />

        </Grid>

    </Viewbox>
</UserControl>
