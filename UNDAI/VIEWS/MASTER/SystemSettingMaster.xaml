                    <!--  ContentPresenter for button content  -->
                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalAlignment}" />

                    <!--  Image for the button  -->
                    <Image
                        x:Name="ButtonImage"
                        Width="150"
                        Source="\RESOURCES\UP ARROW.png" />
                </Grid>

                <Border.Effect>
                    <DropShadowEffect
                        Direction="-40"
                        Opacity="0.3"
                        ShadowDepth="4" />
                </Border.Effect>
            </Border>

            <!--  Trigger to change the image when the button is pressed  -->
            <ControlTemplate.Triggers>
                <!--  Trigger when the button is pressed  -->
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter TargetName="ButtonImage" Property="gif:AnimationBehavior.SourceUri" Value="\RESOURCES\UP ARROW2.gif" />
