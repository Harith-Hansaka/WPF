    <Viewbox
        x:Name="viewBox1"
        Margin="10"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Stretch="Uniform"
        StretchDirection="Both"
        UseLayoutRounding="True">

        <Grid Grid.IsSharedSizeScope="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="AUTO" />
                <RowDefinition Height="AUTO" />
                <RowDefinition Height="AUTO" />
                <RowDefinition Height="AUTO" />
                <RowDefinition Height="AUTO" />
                <RowDefinition Height="AUTO" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="AUTO" />
                <ColumnDefinition Width="AUTO" />
                <ColumnDefinition Width="370" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Orientation="Horizontal">

                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="AUTO" />
                        <ColumnDefinition Width="AUTO" />
                        <ColumnDefinition Width="AUTO" />
                        <ColumnDefinition Width="AUTO" />
                        <ColumnDefinition Width="AUTO" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="90"
                        Margin="0,0,30,0"
                        VerticalAlignment="Top"
                        Background="{Binding ConnectBtnColor}"
                        BorderBrush="Blue"
                        BorderThickness="1"
                        CornerRadius="5">

                        <Button
                            x:Name="btnConnect"
                            Width="220"
                            Content="{Binding ConnectedButtonText}"
                            FontSize="40"
                            Foreground="White"
                            PreviewMouseDown="btnConnect_PreviewMouseDown"
                            PreviewMouseMove="btnConnect_PreviewMouseMove"
                            PreviewMouseUp="btnConnect_PreviewMouseUp"
                            PreviewStylusDown="btnConnect_PreviewStylusDown"
                            PreviewStylusMove="btnConnect_PreviewStylusMove"
                            PreviewStylusUp="btnConnect_PreviewStylusUp"
                            PreviewTouchDown="btnConnect_PreviewTouchDown"
                            PreviewTouchMove="btnConnect_PreviewTouchMove"
                            PreviewTouchUp="btnConnect_PreviewTouchUp"
                            Style="{StaticResource ConnectButtonStyle}"
                            Stylus.IsFlicksEnabled="False"
                            Stylus.IsPressAndHoldEnabled="False" />

                    </Border>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,30,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="#45A6F4"
                        BorderBrush="Blue"
                        BorderThickness="1"
                        CornerRadius="5">

                        <TextBlock
                            x:Name="txtBlockComSlave"
                            Width="180"
                            Height="AUTO"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            FontSize="40"
                            Foreground="Black"
                            Text="センター"
                            TextAlignment="Center" />
                    </Border>

                    <Border
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="0,0,30,0"
                        Background="{Binding GPSStatusDisplay}"
                        BorderBrush="Blue"
                        BorderThickness="1"
                        CornerRadius="5">

                        <TextBlock
                            x:Name="txtBlockGPS"
                            Width="200"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            FontSize="40"
                            Foreground="Black"
                            Text="{Binding GPSStatusName}"
                            TextAlignment="Center" />

                    </Border>

                    <Border
                        Grid.Row="0"
                        Grid.Column="3"
                        Margin="0,0,10,0"
                        Background="#45A6F4"
                        BorderBrush="Blue"
                        BorderThickness="1"
                        CornerRadius="5">

                        <TextBlock
                            x:Name="txtBlockUnitNo"
                            Width="180"
                            Height="AUTO"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="40"
                            Text="1：N接続"
                            TextAlignment="Center" />

                    </Border>

                    <Border
                        Grid.Row="0"
                        Grid.Column="4"
                        Margin="0"
                        Background="LightYellow">

                        <TextBlock
                            x:Name="txtBlockTime"
                            Width="220"
                            Height="AUTO"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            FontSize="40"
                            Text="{Binding TxtBlockTime}"
                            TextAlignment="Center" />

                    </Border>

                    <Border
                        Grid.Row="0"
                        Grid.Column="7"
                        Margin="0"
                        BorderThickness="1">

                        <TextBlock
                            x:Name="txtBlockDate"
                            Width="220"
                            Height="AUTO"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            FontSize="40"
                            Text="{Binding TxtBlockDate}"
                            TextAlignment="Center" />

                    </Border>

                    <Canvas
                        Grid.Row="0"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Background="#80ffffe0"
                        Visibility="{Binding ControllerAccess}" />

